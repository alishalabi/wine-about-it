<div class="show-one">
  <h3><a href="/">Home</a></h3>

  <div class="one-grape">

    <div class="one-grape-card">
      <div class="one-grape-image">
        <img src={{grape.image}} alt="Image">
      </div>
      <div class="one-grape-text">
        <h1>{{grape.name}}</h1>
        <h2>{{grape.type}}</h2>
        <p>{{grape.description}}</p>
        <button id="pronounce">Pronounce</button>
      </div>
    </div>

    <div class="one-grape-pairings">
      <p>{{grape.pairings}}</p>
    </div>

  </div>
</div>
